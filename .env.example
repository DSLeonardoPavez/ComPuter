# Configuración de la Base de Datos
DATABASE_URL=postgresql://computer_user:computer_password@localhost:5432/computer_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=computer_db
DB_USER=computer_user
DB_PASSWORD=computer_password

# Configuración de la Aplicación
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración del Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Configuración del Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Configuración de Redis (Opcional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Configuración de Web Scraping
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=24
USER_AGENT=ComPuter-Bot/1.0
REQUEST_DELAY_SECONDS=2

# Configuración de NLP
NLP_MODEL_PATH=./models/nlp_model.joblib
TRAIN_NLP_ON_STARTUP=false
NLP_CONFIDENCE_THRESHOLD=0.7

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/computer.log

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuración de Email (Para notificaciones futuras)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@computer.com

# Configuración de APIs Externas
NEWEGG_API_KEY=your-newegg-api-key
AMAZON_API_KEY=your-amazon-api-key

# Configuración de Monitoreo
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ENABLED=false

# Configuración de Docker
POSTGRES_VERSION=15-alpine
NODE_VERSION=18-alpine
PYTHON_VERSION=3.11-slim

# Configuración de Nginx (Para producción)
NGINX_PORT=80
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/computer.crt
SSL_KEY_PATH=/etc/ssl/private/computer.key